<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (Semi-Transparent Gray) -->
    <item>
        <shape>
            <corners android:radius="15dp"/>
            <solid android:color="#2D98C8"/> <!-- 50% transparent gray -->
        </shape>
    </item>

    <!-- Border (Slightly Darker Gray for Blurry Effect) -->
    <item>
        <shape>
            <corners android:radius="15dp"/>
            <solid android:color="#19AAAAAA"/> <!-- Same as background -->
            <stroke android:width="3dp" android:color="#19AAAAAA"/> <!-- Lighter border -->
        </shape>
    </item>

</layer-list>