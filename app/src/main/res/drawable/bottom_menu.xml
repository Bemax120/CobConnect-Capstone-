<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (Semi-Transparent Gray) -->
    <item>
        <shape>
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <solid android:color="#CCFFFAFA"/> <!-- 50% transparent gray -->
        </shape>
    </item>

    <!-- Border (Slightly Darker Gray for Blurry Effect) -->
    <item>
        <shape>
            <corners android:topLeftRadius="15dp" android:topRightRadius="15dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <solid android:color="#CCFFFFFF"/> <!-- Same as background -->
            <stroke android:width="3dp" android:color="#19AAAAAA"/> <!-- Lighter border -->
        </shape>
    </item>

</layer-list>
