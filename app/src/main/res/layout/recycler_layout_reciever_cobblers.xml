<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">

    <TextView
        android:id="@+id/reciever_msagCob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How are you ?"
        android:maxWidth="270sp"
        android:textSize="18sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10sp"
        android:textColor="@color/white"
        android:backgroundTint="#009688"
        android:background="@drawable/custom_background_reciever_msg"
        />

    <TextView
        android:id="@+id/reciever_timeCob"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:text="9:00 AM"
        android:textColor="@color/black"
        android:layout_marginLeft="4sp"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/reciever_msagCob"
        android:layout_toRightOf="@+id/reciever_msagCob"/>

</RelativeLayout>