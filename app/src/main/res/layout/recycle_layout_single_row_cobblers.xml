<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:elevation="5dp"
    android:background="@drawable/border_edittext"
    android:backgroundTint="@android:color/transparent"
    >

    <ImageView
        android:id="@+id/profile_picCob"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.9"
        android:background="@drawable/rounded_image"
        android:padding="4dp"
        android:src="@drawable/person_icon" />

    <LinearLayout
        android:layout_toRightOf="@id/profile_picCob"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profile_nameCob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10sp"
            android:fontFamily="@font/robotoslamedium"
            android:text="Aarin Sheik"
            android:textColor="#063708"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recent_chatPersonCob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text=""
                android:textColor="#393A39"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/recent_chatTextViewCob"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:text=""
                android:textColor="#393A39"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>