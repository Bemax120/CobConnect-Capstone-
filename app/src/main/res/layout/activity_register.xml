<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_white_gradient">

    <LinearLayout
        android:id="@+id/cob_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/create_account_text_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_below="@+id/relativeTop"
            android:background="@drawable/cob_logo"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/createAccView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/cob_logo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="121dp"
        android:orientation="vertical"
        android:padding="20dp">


        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/email_icon"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="#DC494646" />

        <EditText
            android:id="@+id/fName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/person_icon"
            android:drawablePadding="10dp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="#DC494646" />

        <EditText
            android:id="@+id/lName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/person_icon"
            android:drawablePadding="10dp"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="#DC494646" />


        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:drawableRight="@drawable/eye_icon"
            android:textColor="@color/black"
            android:textColorHint="#DC494646" />

        <EditText
            android:id="@+id/repeat_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="13sp"
            android:drawableRight="@drawable/eye_icon"
            android:layout_marginBottom="20dp"
            android:background="@drawable/border_edittext"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="#DC494646" />

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_edittext"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_account_text_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Become a cobblers?"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/register_now_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="Register Now"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>